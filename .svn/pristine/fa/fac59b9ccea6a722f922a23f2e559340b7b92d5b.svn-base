@media screen and (min-width: 800px) {
  html {
    font-size: 50px;
  }
}
@media screen and (min-width: 1024px) {
  html {
    font-size: 64px;
  }
}
@media screen and (min-width: 1280px) {
  html {
    font-size: 80px;
  }
}
@media screen and (min-width: 1360px) {
  html {
    font-size: 85px;
  }
}
@media screen and (min-width: 1366px) {
  html {
    font-size: 85.375px;
  }
}
@media screen and (min-width: 1920px) {
  html {
    font-size: 120px;
  }
}
