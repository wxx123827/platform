@base_fontSize:120;
*{
    margin: 0;
    padding: 0;
}
@font-face {
    font-family: 'SourceHanSansCN-Regular';
    src: url('../font/SourceHanSansCN-Regular.otf');
    src: url('../font/SourceHanSansCN-Regular.otf') format('otf');
    font-weight: normal;
    font-style: normal;
  }
html,body{
    height: 100%;
    width: 100%;
}
body{
    background: url(../imgs/bg.jpg) no-repeat;
    background-size: 100% 100%;
}
.main{
  position: relative;
   width: 100%;
   height: 100%;
   .main_content{
    width: 400px;
	height: 480px;
	background-color: #ffffff;
    border-radius: 10px;
    position: absolute;
    top: 255rem/@base_fontSize;
    left: 1150rem/@base_fontSize;
    .main_text{
        width: 200px;
        height: 60px;
        font-family: 'SourceHanSansCN-Regular';
        font-size: 24px;
        font-weight: normal;
        font-stretch: normal;
        letter-spacing: 0px;
        color: #333333;
        margin-top: 30rem/@base_fontSize;
        margin-left: 130px;
    }
    div{
        height: 40px;
        margin-top: 30rem/@base_fontSize;
        margin-left: 50px;
       p{
        font-size: 14px;
        color: #bd2424;
        margin-top: -10rem/@base_fontSize;
        margin-left: 0px;
        z-index: 1;
       }
       input{
        width: 300px;
        height: 40px;
        text-align: center;
        border-radius: 5px;
        border: solid 1px #bfbfbf;
        font-size: 14px;
        position: relative;
        z-index:99;
     }
    }
    
     .telepone{
         margin-top: -100rem/@base_fontSize;
         height: 40px;
     }
     .login{
         margin-bottom: -10rem/@base_fontSize;
         input{
            background-color: #62b0ed;
            color: #ffffff;
         }
     }
     
     .find_pwd a{
         font-size: 14px;
         text-decoration: none;
     }
     .forget_pwd{
        font-weight: normal;
        font-stretch: normal;
        letter-spacing: 0px;
        color: #666666;
        margin-left: 165px;
     }
     .zhuce{
        font-family: 'SourceHanSansCN-Regular';
        font-size: 14px;
        font-weight: normal;
        letter-spacing: 0px;
        color: #62b0ed;
        margin-left: -25px;
     }
     .others{
        font-family: 'SourceHanSansCN-Regular';
	    font-size: 14px;
	    font-weight: normal;
	    font-stretch: normal;
	    letter-spacing: 0px;
        color: #999999;
        margin-top: 160rem/@base_fontSize;
        margin-left: 160px;
     }
     .others_icon{
         margin-top: -90rem/@base_fontSize;
         margin-left: 145px;
         .qq_icon{
             display: inline-block;
             width: 33px;
             height: 33px;
             background: url('../imgs/qq.png') no-repeat;
         }
         .qq_icon:hover{
             background: url('../imgs/qq_active.png') no-repeat;
         }
         .wx_icon{
            display: inline-block;
            width: 40px;
            height: 33px;
            background: url('../imgs/wx.png') no-repeat;
        }
        .wx_icon:hover{
            background: url('../imgs/wx_active.png') no-repeat;
        }
     }
   }
}
.error {
    font-size: 14px;
    color: #bd2424;
    margin-top: -15px;
    margin-left: 0px;
}

