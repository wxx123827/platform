            <div class="right">
                <h2>我的收藏</h2>
                <hr />
                <form action="" method="" lay-filter="updatepwdform" class="layui-form">
                    <div class="layui-form-item invoice_content">
                        <div class="invoice_title">
                            <button class="layui-btn all">全部<span class="layui-badge layui-bg-gray">21</span></button>
                            <button class="layui-btn equipment">仪器设备<span
                                    class="layui-badge layui-bg-gray">10</span></button>
                            <button class="layui-btn lab">实验室<span class="layui-badge layui-bg-gray">3</span></button>
                            <button class="layui-btn consumable">耗材配件<span
                                    class="layui-badge layui-bg-gray">8</span></button>
                            <button class="layui-btn skill">技能知识<span
                                    class="layui-badge layui-bg-gray">2</span></button>
                        </div>
                        <div id="content_box">
                            <div class="favorite_detail">
                                <div class="invoice_img">
                                    <img src="imgs/admin_icon.png">
                                </div>
                                <div class="invoice_left">
                                    <ul>
                                        <h3>仪器名称</h3>
                                        <li>仪器型号：</li>
                                        <li>仪器分类：</li>
                                        <li>位置：</li>
                                    </ul>
                                </div>
                                <div class="invoice_right">
                                    <div class="default">查看详情</div>
                                    <div class="edit">加入清单</div>
                                    <div class="delete">取消收藏</div>
                                </div>
                            </div>
                            <div class="favorite_detail">
                                <div class="invoice_img">
                                    <img src="imgs/admin_icon.png">
                                </div>
                                <div class="invoice_left">
                                    <ul>
                                        <h3>仪器名称</h3>
                                        <li>仪器型号：</li>
                                        <li>仪器分类：</li>
                                        <li>位置：</li>
                                    </ul>
                                </div>
                                <div class="invoice_right">
                                    <div class="default">查看详情</div>
                                    <div class="edit">加入清单</div>
                                    <div class="delete">取消收藏</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>

            </div>
            <div id="page"></div>
