@font-face {
    font-family: 'SourceHanSansCN-Regular';
    src: url('../font/SourceHanSansCN-Regular.otf');
    src: url('../font/SourceHanSansCN-Regular.otf') format('otf');
    font-weight: normal;
    font-style: normal;
}

.content_left {
    width: 890px;
    height: 1200px;
    background-color: #ffffff;
    float: left;
    margin-bottom: 60px;
}

.main {
    width: 1200px;
    margin: 0 auto;
    margin-top: 20px;
}

.main h3 {
    padding: 30px 10px;
    box-sizing: border-box;
    font-family: 'SourceHanSansCN-Regular';
    font-size: 18px;
    font-weight: normal;
    letter-spacing: 0px;
    color: #666666;
}

.left_img {
    width: 300px;
    height: 300px;
    background-color: #eeeeee;
    margin-left: 10px;
    float: left;
}

.imgs_box img {
    width: 60px;
    height: 70px;
    margin-top: 3px;
    margin-left: 20px;
}

.content {
    width: 300px;
    height: 230px;
    box-sizing: border-box;
    border: 1px solid #eee;
}


.content img {
    width: 100%;
    height: 100%;

}

.right_text {
    height: 300px;
    margin-left: 320px;

}
.introduction div{
    font-size: 16px;
    margin-top: 10px;
    margin-left: 10px;
}

.right_text p {
    padding-top: 20px;
    font-size: 16px;
}

.right_text input {
    width: 144px;
    height: 35px;
    background-color: #247dd0;
    border-radius: 5px;
    font-family: 'SourceHanSansCN-Regular';
    font-size: 16px;
    font-weight: normal;
    font-stretch: normal;
    letter-spacing: 0px;
    color: #ffffff;
    margin-top: 20px;
    border: 1px solid #247dd0;
}

.shops_list {
    width: 250px;
    margin-top: 30px;
    float: left;
    border: 1px solid #ccc;
    height: 700px;
}

.list_detail p {
    width: 630px;
    height: 30px;
    line-height: 30px;
    border-top: 1px solid #a0a0a0;
    border-bottom: 1px solid #a0a0a0;
    margin-left: 10px;
    margin-top: 30px;
    float: left;
    font-family: 'SourceHanSansCN-Regular';
    font-size: 18px;
    font-weight: normal;
    font-stretch: normal;
    letter-spacing: 0px;
    color: #666666;
    text-align: center;
}
.content_bottom{
    width: 100%;
    height: 700px;
    clear: both;
}
.collect_share{
    height: 30px;
}
#collect,#share{
    cursor: pointer;
    /* width: 100px; */
}
#collect{
    margin-left: 75px;
}
#share{
    margin-left: 40px;
}
#collect:hover .collect_img{
   color: red;
}
#share:hover .share_img{
    color: #247dd0;
}
.introduction {
    width: 630px;
    border: solid 1px #dcdcdc;
    float: left;
    margin-top: 10px;
    margin-left: 10px;
}

.content_right {
    float: right;
    width: 290px;
    height: 703px;
    background-color: #ffffff;
    margin-top: -17px;
}

.content_right p {
    line-height: 40px;
    width: 290px;
    height: 40px;
    background-color: #eeeeee;
    text-align: center;
    font-family: 'SourceHanSansCN-Regular';
    font-size: 14px;
    font-weight: normal;
    font-stretch: normal;
    letter-spacing: 0px;
    color: #666666;
}

.content_right .recommend_list img{
    width: 150px;
    height: 150px;
}
.recommend_list {
    text-align: center;
    margin-top: 15px;
    cursor: pointer;
}
#enter_shop{
    background-color: #247dd0;
    cursor: pointer;
    margin-left: 50px;
    width: 140px;
    margin-top: 10px;
    text-align: center;
   
    background-color: #247dd0;
	border-radius: 5px;
}
#enter_shop a{
    color: #ffffff;
    height: 30px;
    font-size: 14px;
}
.recommend_list img {
    width: 110px;
    height: 100px;
}

.recommend_list li {
    list-style: none;
}

.badge {
    position: absolute;
    width: 50px;
    height: 50px;
    background: url(../imgs/badge.png) no-repeat;
    top: 10px;
    left: 10px;
    border: none;
    padding-left: 15px;
    padding-top: 8px;
    box-sizing: border-box;

}

.badge p {
    text-align: center;
}

.hot_product {
    background-color: #eeeeee;
    border-radius: 5px;
    height: 30px;
    line-height: 30px;
    width: 250px;
    text-align: center;
    margin-top: 20px;
}