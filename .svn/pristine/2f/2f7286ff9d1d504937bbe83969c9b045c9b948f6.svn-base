//商品分类

function getClassify() {
	var html = "";
	$.ajax({
		url: baseUrl + 'main/getClassify',
		type: 'get',
		success: function (res) {
			if (res.code === SUCCESS) {
				$.each(res.msg, function (i, n) {					
					// html += '<div class="title" style="margin-top:10px"><h3 value="' + n.uid + '" onClick=classifySearch(\'' + String(n.uid) + '\',1,\'' + n.name + '\')>' + n.name + '</h3></div>'
					if (n.hasNext === 1) {
						$.each(n.next, function (i, n) {
							html += '<div class="item">';
							html += '<h4 value="' + n.uid + '"><a href="#" onClick=classifySearch(\'' + String(n.uid) + '\',1,\'' + n.name + '\');return false;>' + n.name +
								'</a><span style=\"float:right;margin-right:10px;margin-top:3px\">></span></h4>'
							if (n.hasNext === 1) {
								str1 = "";
								html += '<div class="item-list clearfix ">';
								html += '<div class="subitem">';
								html += '<dl class="fore">';
								html += '<dt><a href="#">' + n.name + '</a></dt><dd>';
								html += classifys(n, html);
								html += '</dd></dl>';
								html += "</div>";
								html += "</div>";
							}
							html += "</div>";
						})

					}

				})
				$("#classify").append(html);
			}
		}
	})
}

function getClassifyById(id) {
	var html = "";
	$.ajax({
		url: baseUrl + 'main/getClassifyById',
		type: 'get',
		data: {
			uid: id
		},
		success: function (res) {
			if (res.code === SUCCESS) {
				$.each(res.msg, function (i, n) {
					html += '<div class="title"><h3 value="' + n.uid + '" onClick=classifySearch(\'' + String(n.uid) + '\',1,\'' + n.name + '\')>' + n.name + '</h3></div>'
					if (n.hasNext === 1) {
						$.each(n.next, function (i, n) {
							html += '<div class="item">';
							html += '<h4 value="' + n.uid + '"><a href="#" onClick=classifySearch(\'' + String(n.uid) + '\',1,\'' + n.name + '\');return false;>' + n.name +
								'</a><span style=\"float:right;margin-right:20px;margin-top:3px\">></span></h4>'
							if (n.hasNext === 1) {
								str1 = "";
								html += '<div class="item-list clearfix ">';
								html += '<div class="subitem">';
								html += '<dl class="fore">';
								html += '<dt><a href="#">' + n.name + '</a></dt><dd>';
								html += classifys(n, html);
								html += '</dd></dl>';
								html += "</div>";
								html += "</div>";
							}
							html += "</div>";
						})

					}

				})
				$("#classify").append(html);
			}
		}
	})
}

//递归进行循环级数
function classifys(n, str) {
	$.each(n.next, function (i, n) {
		str1 += '<em value="' + n.uid + '"><a href="#" onClick=classifySearch(\'' + String(n.uid) + '\',1,\'' + n.name + '\');return false;>' + n.name + '</a></em>';
		if (n.hasNext === 1) {
			classifys(n, str);
		}
	})
	return str1;
}