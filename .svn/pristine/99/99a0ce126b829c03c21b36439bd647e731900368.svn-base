.basic_content {
    clear: both;
    width: 100%;
}

.content {
    width: 1200px;
    margin: 0 auto;
}

.content .left{
    width: 190px;
    height: 456px;
    background-color: #ffffff;
    text-align: center;
}
.content .left ul{
    margin-top: 20px;
}
.content .left li a{
    font-size: 16px;
    display: inline-block;
    width: 190px;
    height: 35px;
    line-height: 35px;
}
.content .left li{
    width: 190px;
    height: 35px;
    line-height: 35px;
}
.content .left li:hover{
    width: 190px;
    height: 35px;
    background-color: #eeeeee;
}

.content .right {
    width: 1000px;
    /* height: 750px; */
    background-color: #ffffff;
    padding-bottom: 120px;
}

.content .right p {
    float: left;
}
.content .right p span{
    font-size: 14px;
}
.content .right h2{
    font-size: 20px;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0px;
    color: #333333;
    padding: 20px 0px 0px 20px;
}
.content .right hr{
    background-color: #999999!important;
}
.content .right h3{
    font-size: 16px;
    color: #999999;
}
.content .right h3 span{
    display: inline-block;
    width: 4px;
	height: 14px;
    background-color: #247dd0;
    margin: 10px 10px 0px 0px;
    padding-top: 15px;
    box-sizing: border-box;
}
.layui-form-item{
    height: 35px;
    line-height: 35px;
}
.layui-btn-normal{
    background-color: #247dd0!important;
    border-radius: 5px;
}
.layui-btn{
    font-size: 12px!important;
    border-radius: 5px!important;
}
.layui-form-item{
    margin-top: 10px;
}