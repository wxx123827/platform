.basic_content {
    clear: both;
    width: 100%;
}

.content {
    width: 1200px;
    margin: 0 auto;
}
/* .invoice_title .active{
    background-color: #247dd0 !important;
    border-radius: 5px 5px 0px 0px !important;
} */

.invoice_title .layui-btn {
    height: 30px !important;
    line-height: 30px !important;
    padding: 0 !important;
    font-size: 14px;
    font-weight: normal;
    font-stretch: normal;
    letter-spacing: 0px;
    color: #333333;
    background-color: #ffffff !important;
    width: 100px;
}
.invoice_title .layui-btn:hover{
    background-color: #247dd0 !important;
    border-radius: 5px 5px 0px 0px !important;
}


.content .left {
    width: 190px;
    height: 456px;
    background-color: #ffffff;
    text-align: center;
}

.content .left ul {
    margin-top: 20px;
}

.content .left li a {
    font-size: 16px;
    display: inline-block;
    width: 190px;
    height: 35px;
    line-height: 35px;
}

.content .left li {
    width: 190px;
    height: 35px;
    line-height: 35px;
}

.content .left li:hover {
    width: 190px;
    height: 35px;
    background-color: #eeeeee;
}

.content .right {
    width: 1000px;
    background-color: #ffffff;
    padding-bottom: 120px;
}

.content .right p {
    float: left;
}

.content .right p span {
    font-size: 14px;
}

.content .right h2 {
    font-size: 20px;
    font-weight: normal;
    font-stretch: normal;
    letter-spacing: 0px;
    color: #333333;
    padding: 20px 0px 0px 20px;
}

.content .right hr {
    background-color: #999999 !important;
}

.content .right .favorite_detail {
    width: 1000px;
    height: 140px;
    background-color: #f1f8ff;
    margin-top: 10px;
}

.favorite_detail .invoice_img {
    float: left;

}

.favorite_detail .invoice_img img {
    display: inline-block;
    width: 100px;
    height: 100px;
    margin-top: 20px;
    margin-left: 20px;
    background-color: #bfbfbf;
}

.favorite_detail .invoice_left {
    float: left;
    margin-left: 20px;
}

.favorite_detail .invoice_left ul {
    margin-top: 20px;
}

.favorite_detail .invoice_left ul h3 {
    font-size: 14px;
    margin-bottom: 15px;
}

.favorite_detail .invoice_left ul li {
    margin-top: 5px;
    font-size: 12px;
}

.favorite_detail .invoice_right {
    float: right;
}

.favorite_detail .invoice_right div {
    margin-top: 20px;
    margin-right: 20px;
    color: #247dd0;
    font-size: 12px;
}

#content_box {
    min-height: 500px;
    height: auto;
}