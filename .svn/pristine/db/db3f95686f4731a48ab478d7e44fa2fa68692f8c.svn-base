//获取所有领域
var getFields = function getFields() {
	var html = "";
	$.ajax({
		url: baseUrl + 'fields/getFields',
		xhrFields: {
			withCredentials: true
		},
		crossDomain: true,
		async: false,
		success: function (res) {
			console.log(res)
			if (res.code === SUCCESS) {
				$.each(res.msg.true, function (i, n) {
					html += '<input type="checkbox" name="fields" title="' + n + '" lay-skin="primary" value="' + n + '"> ';
				})
				html +=
					'<div class="layui-input-inline" style="margin-top:20px;float:none"><input type="text" name="fieldsstr" lay-verify="fieldsstr" autocomplete="off" placeholder="请输入服务领域，以英文逗号分隔" class="layui-input"></div>'
			}
			$('.fields').html(html);
			layui.form.render("checkbox")
		}
	})
}

