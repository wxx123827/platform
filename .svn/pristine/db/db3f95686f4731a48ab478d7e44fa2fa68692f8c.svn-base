//检查是否入驻
var checkUserJoinAjax = function checkUserJoin() {
	$.ajax({
		url: baseUrl + "join/checkUserJoin",
		xhrFields: {
			withCredentials: true
		},
		crossDomain: true,
		async: false,
		success: function (res) {
			if (res.code === SUCCESS) {
				if (res.msg.joinstatus === '1' && res.msg.auditstatus === '2') {
					userJoinStatus = true;
					return;
				}
			}
			userJoinStatus = false;
		},
		error: function (res) {
			userJoinStatus = false;
		}
	})
}
