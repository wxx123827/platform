			success: function(res) {
				if (res.code === SUCCESS) {
					console.log(res)
					return;
				}
			}
		})
	}

	function addStock(uid, stock) {
		$.ajax({
			url: baseUrl + "goods/addStock",
			xhrFields: {
				withCredentials: true
			},
			crossDomain: true,
			type: "post",
			async: false,
