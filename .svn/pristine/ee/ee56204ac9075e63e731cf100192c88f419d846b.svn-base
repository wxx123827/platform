layui.use(['form', 'layedit', 'laydate'], function() {
	var $ = layui.jquery,
		upload = layui.upload,
		form = layui.form,
		layer = layui.layer,
		layedit = layui.layedit,
		laydate = layui.laydate;

	$(function() {
		$.ajax({
			url: baseUrl + "personal/getUserInfo",
			xhrFields: {
				withCredentials: true
			},
			crossDomain: true,
			success: function(res) {
				if (res.code === SUCCESS) {
					var data = res.msg;
					form.val("updatetelform", {
						"tel": data.tel
					})
					form.val("updatetelform", {
						"email":data.email
					})
					if(data.emailstatus==='0'){
						$(".emailstatus").before("<span style='color: red;'>未验证</span>")
					}else{
						$('emailstatus').html()
					}
				}
			}
		})
	})
	form.verify({
		oldpwd: function(value) {
			if (value.length === 0) {
				return "请输入原密码";
			}
		},
		newpwd: function(value) {
			if (value.length === 0) {
				return "请输入新密码";
			}
		},
		checkpwd: function(value) {
			if (value.length === 0) {
				return "请输入新密码";
			}
		},
		oldcode: function(value) {
			if (value.length === 0) {
				return "请输入短信验证码";
			}
		},
		newtel: function(value) {
			if (value.length === 0) {
				return "请输入手机号";
			}
		},
		newcode: function(value) {
			if (value.length === 0) {
				return "请输入短信验证码";
			}
		},
		tels: [/^[1][3,4,5,7,8][0-9]{9}$/, '手机号格式有误'],
		pass: [
			/^([0-9]+[a-zA-Z]+|[a-zA-Z]+[0-9]+)[0-9a-zA-Z]*$/, '密码不符合要求，6-20位数字和字母组合'
		]
	})
	form.on('submit(savepwd)', function(data) {
		var data = form.val("updatepwdform");
		if (data.newpwd != data.checkpwd) {
			layer.msg("两次密码输入不相同", {
				icon: 2
			});
			$("[name=checkpwd]").addClass("layui-form-danger").focus();
			return false;
		}
		updatepwd(JSON.stringify(data));
		return false;
	})
	form.on("submit(savetel)", function(data) {
		var data = form.val("updatetelform");
		if (data.tel === data.newtel) {
			layer.msg("新旧手机号不能相同", {
				icon: 2
			});
			$('[name=newtel]').addClass("layui-form-danger").focus();
			return;
		}
		console.log(data)
		return false;
	})
	$('.sendSms').on('click', function() {
		if ($(this).hasClass("layui-btn-disabled")) {
			return;
		}
		var tel = $(this).prev().val();
		console.log(tel)
		if (tel === "") {
			layer.msg("请输入手机号", {
				icon: 2
			});
			$(this).prev().addClass("layui-form-danger").focus();
			return;
		} else if (!/^[1][3,4,5,7,8][0-9]{9}$/.test(tel)) {
			layer.msg("手机号格式有误", {
				icon: 2
			});
			$(this).prev().addClass("layui-form-danger").focus();
			return;
		}
		if ($('[name=tel]').val() === $('[name=newtel]').val()) {
			layer.msg("新旧手机号不能相同", {
				icon: 2
			});
			$('[name=newtel]').addClass("layui-form-danger").focus();
			return;
		}
		sendSms(tel, $(this))
	})

	function updateTel(data) {
		$.ajax({
			url: baseUrl + "",
			xhrFields: {
				withCredentials: true
			},
			crossDomain: true,
			data: {
				data: data
			},
			success: function(res) {
				if (res.code === SUCCESS) {
					layer.msg('修改成功，请重新登录', {
						icon: 1,
						time: 3000 //2秒关闭（如果不配置，默认是3秒）
					}, function() {
						sessionStorage.clear();
						sessionStorage.setItem("url", window.location.href);
						window.location.href = "./login.html";
					});
				} else {
					layer.msg(res.msg);
				}
			}
		})
	}

	function sendSms(tel, thiss) {
		$.ajax({
			url: baseUrl + 'user/sendSms',
			type: 'post',
			data: {
				tel: tel,
			},
			xhrFields: {
				withCredentials: true
			},
			crossDomain: true,
			success: function(res) {
				if (res.code === SUCCESS) {
					layer.msg('发送成功');
					setTimer(thiss)
				} else {
					layer.msg(res.msg)
				}
			}
		})
	}
	//倒计时
	function setTimer(thiss) {
		var time = 60;
		var timers = setInterval(function() {
			time--;
			if (time <= 0) {
				time = 0;
				console.log(time);
				$(thiss).eq(0)[0].b = false;
				$(thiss).text('获取验证码');
				clearInterval(timers);
				return false;

			}
			$(thiss).text(time + '秒后重新获取');
			if (time == 1) {
				$(thiss).removeClass("layui-btn-disabled")
			} else {
				$(thiss).addClass("layui-btn-disabled")
			}
		}, 1000)
	}

	function updatepwd(data) {
		$.ajax({
			url: baseUrl + "",
			xhrFields: {
				withCredentials: true
			},
			crossDomain: true,
			data: {
				data: data
			},
			success: function(res) {
				if (res.code === SUCCESS) {
					layer.msg('修改成功，请重新登录', {
						icon: 1,
						time: 3000 //2秒关闭（如果不配置，默认是3秒）
					}, function() {
						sessionStorage.clear();
						sessionStorage.setItem("url", window.location.href);
						window.location.href = "./login.html";
					});
				} else {
					layer.msg(res.msg);
				}
			}
		})
	}
})
