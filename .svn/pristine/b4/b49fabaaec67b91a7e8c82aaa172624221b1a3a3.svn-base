
.basic_content {
    clear: both;
    width: 100%;
}

.content {
    width: 1200px;
    margin: 0 auto;
}

.content .left{
    width: 190px;
    height: 456px;
    background-color: #ffffff;
    text-align: center;
}
.content .left ul{
    margin-top: 20px;
}
.content .left li a{
    font-size: 16px;
    display: inline-block;
    width: 190px;
    height: 35px;
    line-height: 35px;
}
.content .left li{
    width: 190px;
    height: 35px;
    line-height: 35px;
}
.content .left li:hover{
    width: 190px;
    height: 35px;
    background-color: #eeeeee;
}

.content .right {
    width: 1000px;
    background-color: #ffffff;
    padding-bottom: 120px;
}

.content .right p {
    float: left;
}
.content .right p span{
    font-size: 14px;
}
.content .right h2{
    font-size: 20px;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0px;
    color: #333333;
    padding: 20px 0px 0px 20px;
}
.content .right hr{
    background-color: #999999!important;
}

.content .right #content{
    width: 1000px;
    height: 140px;
    background-color: #f1f8ff;
    margin-top: 10px;
}
#content .invoice_img{
    float: left;
    /* display: inline-block; */
    width: 100px;
	height: 100px;
    margin-top: 20px;
    margin-left: 20px;
}
#content .invoice_left{
    float: left;
    margin-left: 20px;
}
#content .invoice_left ul{
    margin-top: 20px;
}
#content .invoice_left ul li:first-child{
    margin-top: 15px;
}
#content .invoice_left ul li{
    margin-top: 5px;
}
#content .invoice_right{
    float: right;
}
#content .invoice_right div{
    margin-top: 20px;
    margin-right: 20px;
    color: #247dd0;
    font-size: 12px;
}
#content .invoice_bottom{
    width: 1000px;
    margin-top: 100px;
}
#save,#cancel{
   float: left;
    width: 100px;
    height: 40px;
    line-height: 40px;
    border-radius: 5px;
    margin-top: 100px;
    border: solid 1px #247dd0;
    color: #247dd0;
    font-size: 14px;
}
#save:hover,#cancel:hover{
    background-color: #247dd0;
}
#save{
    margin-left: 30%;
}
#cancel{
    margin-left: 10px;
}

