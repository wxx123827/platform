$(".checkEmail").on("click", function() {
	$.ajax({
		url: baseUrl + "personal/checkEmail",
		xhrFields: {
			withCredentials: true
		},
		crossDomain: true,
		data: {
			code: getUrlSearch("key")
		},
		success: function(res) {
			if (res.code === SUCCESS) {
				chooseHtml(0, "");
			} else {
				chooseHtml(1, res.msg);
			}
		}
	}) 
})

function chooseHtml(type, str) {
	var html = "";
	switch (type) {
		case 0:
			html += '<div><h2>验证通过</h2></div>';
			html += '<div><h2>您现在可以使用邮箱或手机号登录了</h2></div>';
			break;
		case 1:
			html += '<div><h2>验证失败</h2></div>';
			html += '<div><h2>' + str + '</h2></div>';
			break;
	}
	$(".result_content").html(html);
}

$(document).on("click", ".sendEmail", function() {
	var thiss = $(this);
	var url = window.location.href;
	url = url.substring(0, url.lastIndexOf("/") + 1);
	url += "email_result.html";
	$.ajax({
		url: baseUrl + "personal/sendEmail",
		xhrFields: {
			withCredentials: true
		},
		crossDomain: true,
		data: {
			url: url
		},
		success: function(res) {
			if (res.code === SUCCESS) {
				layer.msg("激活邮件已发送，请前往邮箱验证", {
					icon: 1
				});
				setTimer(thiss);
			} else {
				layer.msg(res.msg, {
					icon: 2
				});
			}
		}
	})
})

function getUrlSearch(name) {
	// 未传参，返回空
	if (!name) return null;
	// 查询参数：先通过search取值，如果取不到就通过hash来取
	var after = window.location.search;
	after = after.substr(1) || window.location.hash.split('?')[1];
	// 地址栏URL没有查询参数，返回空
	if (!after) return null;
	// 如果查询参数中没有"name"，返回空
	if (after.indexOf(name) === -1) return null;

	var reg = new RegExp('(^|&)' + name + '=([^&]*)(&|$)');
	// 当地址栏参数存在中文时，需要解码，不然会乱码
	var r = decodeURI(after).match(reg);
	// 如果url中"name"没有值，返回空
	if (!r) return null;

	return r[2];
}
