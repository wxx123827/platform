/*toubu*/
body{
  width: 100%;
}
#front_header {
	width: 100%;
	height: 40px;
	font-family: 'SourceHanSansCN-Normal';
	border: solid 1px #bfbfbf;
	line-height: 40px;
	font-size: 14px;
	color: #666;
}

#front_header:after {
	display: block;
	content: '';
	clear: both;
	height: 0;

}

.head_container {
	width: 1200px;
	margin: 0 auto;
	clear: both;
}

.right {
	float: right;
}

#front_header .right a {
	margin-left: 90px;
}

.left {
	float: left;
}

.about {
	margin-left: 100px;
}

/* 搜索框 */
#search_container {
	width:100%;
	background: #fff;
	min-width: 1200px;
	padding-top: 40px;
	padding-bottom: 100px;
	box-sizing: border-box;

}
.searchcontainer{
	    width: 1200px;
	    margin: 0 auto;
	    clear: both;
}

#search_container.active {
	position: fixed;
	padding: 0;
	z-index: 20;
	top: 0;
	-webkit-box-shadow: 0 1px 4px #ddd;
	-moz-box-shadow: 0 1px 4px #ddd;
	box-shadow: 0 1px 4px #ddd;
	-webkit-transition: top 0.3s ease-in-out 0.3s;
	-moz-transition: top 0.3s ease-in-out 0.3s;
	-ms-transition: top 0.3s ease-in-out 0.3s;
	-o-transition: top 0.3s ease-in-out 0.3s;
	transition: top 0.3s ease-in-out 0.3s;
}

#search_container .logo {
	width: 18%;
	height: 60px;
}

#search_container .logo img {
	width: auto;
	float: left;
}

#search_container .punlish_container {

	position: relative;

	width: 200px;
	height: 45px;

}

#search_container .punlish_container .publish {
	height: 45px;
	width: 100%;
	border: solid 1px #247dd0;
	border-radius: 5px;
	color: #247dd0;
	cursor: pointer;
	background-color: #fff;
	font-size: 14px;
	padding-left: 18px;
	position: relative;
}

#search_container .punlish_container .publish:hover {
	font-size: 17px;
}

#footer {
	width: 100%;
	clear: both;
	height: 350px;
	background-color: #272525;

}

#footer .footer_main {
	width: 1200px;
	margin: 0 auto;
}

#footer .footer_main .ykx_intro {
	padding: 30px 0 20px 0px;
	border-bottom: 1px solid #999999;
}

#footer .footer_main .ykx_intro .footer_img {
	border-bottom: 1px solid #999999;
	padding-left: 190px;
	padding-bottom: 10px;
}

#footer .footer_main .ykx_intro:after {
	display: block;
	height: 0;
	content: '';
	clear: both;
}

#footer .footer_main .ykx_intro dl {
	float: left;
	margin-left: 200px;

	position: relative;
}

#footer .footer_main .ykx_intro dl dt {
	font-size: 16px;
	color: #eeeeee;
	font-weight: 400;
	margin-top: 15px;
	margin-bottom: 15px;
}

#footer .footer_main .ykx_intro dl dd {
	line-height: 25px;
	font-size: 14px;
	color: #999999;
}


#footer .footer_main .ykx_intro dl dd a {
	color: #999999;
}

#footer .footer_main .ykx_intro dl dd a:hover {
	color: #e31f1f;
}


#footer .footer_main .icp_no {
	line-height: 64px;
	color: #aaa;
	font-size: 14px;
	position: relative;
	text-align: center;
}

#footer .footer_main .icp_no .Trust_Website_Seal {
	width: 95px;
	height: 35px;
	position: absolute;
	right: 0;
	top: 20px;

}

#footer .footer_main .icp_no .Trust_Website_Seal img {
	width: 100%;
	height: 100%;
	vertical-align: top;
	margin-top: -4px;
}
